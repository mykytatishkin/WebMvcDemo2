<h2>Select a library from the list:</h2>
<form asp-action="Index" method="get" >
    <select name="LibraryId">
        <option value="0">Select library</option>
        @foreach(Library item in ViewBag.Libraries)
        {
            <option value="@item.Id" >@item.Name</option>
        }
    </select>
    <input type="submit" value="Select Library" class="btn btn-warning" />
</form>

<div style="border:1px solid maroon;margin:5px;padding:2px;">
    @if(ViewBag.Pictures != null)
    {
        @foreach (Picture item in ViewBag.Pictures)
        {
            <img src="@item.ImageUrl" alt="Picture" height="100" />
        }
    }
</div>
