<h2>Select a library from the list:</h2>
<form asp-action="Index" method="get" >
    <select name="LibraryId">
        @foreach(Library item in ViewBag.Libraries)
        {
            <option value="@item.Id" >@item.Name</option>
        }
    </select>
    <input type="submit" value="Select Library" class="btn btn-warning" />
</form>
